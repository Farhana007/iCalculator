<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >



    <TextView
        android:id="@+id/solution_tv"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#A903ECF4"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#06EFCB"
        android:textSize="64dp" />
    
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#E1D9D9"
       android:paddingVertical="16dp"
       android:id="@+id/buttons_layout" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal" >
           
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_c"
               android:backgroundTint="#E91E63"
               android:text="C"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_open_bracket"
               android:backgroundTint="#E91E63"
               android:text="("
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_close_button"
               android:backgroundTint="#E91E63"
               android:text=")"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_divide"
               android:backgroundTint="#FA6434"
               android:text="/"
               />

        
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal" >

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_seven"
               android:text="7"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_eight"
               android:text="8"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_nine"
               android:text="9"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_multiply"
               android:backgroundTint="#FA6434"
               android:text="*"
               />


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal" >

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_four"
               android:text="4"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_five"
               android:text="5"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_six"
               android:text="6"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_plus"
               android:backgroundTint="#FA6434"
               android:text="+"
               />


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal" >

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_one"
               android:text="1"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:layout_margin="12dp"
               android:textAlignment="center"
               android:id="@+id/button_two"
               android:text="2"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
